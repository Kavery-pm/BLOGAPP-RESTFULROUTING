<%- include("partials/header") %>
<div class = "ui main container text segment">
    <div class = "ui huge header"> Edit blog <%=blog.title%> </div>

<div class = "ui form">
<form action="/blogs/<%= blog._id %>?_method=PUT" method= "POST">
    <div class="field">
            <label>Blog name:</label>
   <input type="text" name="blog[title]" id="name" value="<%=blog.title%>">
    </div>
    <div class="field">
            <label>Image:</label>
    <input type="text" name="blog[image]" id = "image" value="<%=blog.image%>">
    </div>
    <div class="field">
            <label>body</label>
            <textarea name="blog[body]" cols="30" rows="10" ><%=blog.body%>"</textarea>
    </div>
    <button type="submit" class="ui fluid inverted pink button">submit</button>
    
</form>
</div>
</div>

