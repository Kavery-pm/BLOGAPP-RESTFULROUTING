<%- include("partials/header") %>
<div class = "ui main text container">
    <div class = "ui huge header">RESTFUL BLOG APP</div>
    <div class="ui top attached segment">
            <div class = "ui divided items">
        <% Blog.forEach(function(blog){ %>
       
           <div class = "item">
               
            <img class ="ui large avatar image" src="<%= blog.image %>">
               
               <div class = "content">
                   <h1><%= blog.title %></h1>
                   <div class = "meta">
                        <span><%= blog.created.toDateString() %></span>
                   </div>
                    <div class = "description">
                            <p><%= blog.body.substring(0, 50) %>...</p>
                    </div>
                     <div class = "extra">
                            <a  class = "ui floated basic pink button" href="/blogs/<%= blog._id %>">more info <i class="right chevron icon"></i>
                            </a>
                     </div>
                     
               </div>
             </div>
             <% }); %>   
    </div>
            </div> 
            
</div>
</div>


